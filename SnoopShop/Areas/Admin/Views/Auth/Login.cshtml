@model SnoopShop.Models.UserLogin
@{ Layout = null; }


<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title Đăng nhập trang quản trị</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Public/images/icon_admin.png" rel="shortcut icon" type="image/x-icon" />
    <link href="~/Public/Admin/css/all.min.css" rel="stylesheet" />
    <link href="~/Public/Admin/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/Public/Admin/css/font-sans.pro.css" rel="stylesheet" />
    <link href="~/Public/Admin/css/toastr.min.css" rel="stylesheet" />
</head>
<body class="hold-transition login-page">
    <div class="h-100 w-100 position-absolute" style="background-image:url(../../../../Public/images/bg_admin.png);background-size: 100% auto; z-index:-1; opacity:.6"></div>
    <div class="overlay justify-content-center align-items-center d-none bg-secondary w-100 h-100 position-absolute" style="z-index:1; opacity:.3"><i class="fas fa-2x fa-sync fa-spin"></i></div>
    <div class="login-box">
        <div class="login-logo">
            
            <img src="~/Public/images/avt_admin.png" class="d-block rounded-circle mx-auto" width="80" />
            <a href="javascript:void(0)" class="text-light" > <b style="color:#dd5151">SnoopShop Manager</b></a>
        </div>
        <div class="card">
            <div class="card-body login-card-body rounded">
                
                <form method="POST">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Tài khoản" name="username" value="">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                @*<span class="fas fa-envelope"></span>*@

                                <img src="~/Public/images/icons8-account-16.png" />
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="Mật khẩu" name="password" value="">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                @*<span class="fas fa-lock"></span>*@
                                <img src="~/Public/images/icons8-forgot-password-16.png" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-md-10">

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-7">
                            <div class="icheck-primary">
                                @Html.EditorFor(model => model.RememberMe)
                                @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                                <small class="font-weight-bold"> Lưu mật khẩu</small>
                            </div>
                        </div>
                        <div class="col-5">
                            <button type="submit" class="btn-login btn btn-danger btn-block" id="btn-login">Đăng nhập</button>
                        </div>
                    </div>
                </form>

                <div class="social-auth-links text-center mb-3">
                    <p>Hoặc</p>
                    <a href="~/Admin/User/ForgotPassword" class="btn btn-block btn-danger">
                        Quên mật khẩu
                    </a>
                    
                </div>

                
            </div>
        </div>
    </div>

    <script src="~/Public/Admin/js/jquery.min.js"></script>
    <script src="~/Public/Admin/js/bootstrap.bundle.min.js"></script>
    <script src="~/Public/Admin/js/toastr.min.js"></script>
    <script src="~/Public/Admin/js/adminlte.min.js"></script>
    <script src="~/Public/Admin/js/karma.laclac.min.js"></script>

</body>
</html>
